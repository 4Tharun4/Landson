generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model Products{
id String @id @default(auto()) @map("_id") @db.ObjectId
ProductName String
ProductPriceUser  String 
ProductPriceDealer String
ProductDescription String?
ProductStock String
ProductModel String
imageUrl String
ProductType String?
Productslug String?

}

 model Users{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  Name String
  Email String @unique
  PhoneNumber String
  Password String
  Address String
  isVerfied Boolean @default(false)
  role String[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  UserId String? 
  verficationtoken String?
  imageUrl String?
 }

model Category {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  slug String
  Name String
  imageUrl String
  Description String
 createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
